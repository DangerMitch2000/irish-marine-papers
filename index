<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Irish Marine Science Papers</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="style.css">
  <script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>
</head>
<body>
<div id="app">
  <h1>Irish Marine Science Papers</h1>
  <p>Last update: {{ lastUpdate }}</p>
  <input v-model="search" placeholder="Search title, author, journal…" />
  <label><input type="checkbox" v-model="openAccess"> Open-access only</label>
  <ul>
    <li v-for="p in filtered">
      <a :href="p.url" target="_blank">{{ p.title }}</a><br>
      <small>{{ p.author }} — <em>{{ p.journal }}</em> ({{ p.year }})</small>
    </li>
  </ul>
</div>
<script>
fetch('papers.json').then(r=>r.json()).then(data=>{
  const {createApp} = Vue;
  createApp({
    data(){ return {papers:data.papers, lastUpdate:data.lastUpdate, search:"", openAccess:false}},
    computed:{
      filtered(){
        let s = this.search.toLowerCase();
        return this.papers.filter(p=>
          (p.title.toLowerCase().includes(s) ||
           p.author.toLowerCase().includes(s) ||
           p.journal.toLowerCase().includes(s)) &&
          (!this.openAccess || p.doi)   // crude OA proxy
        );
      }
    }
  }).mount('#app');
});
</script>
</body>
</html>
